<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <data>
    <variable name="todoViewModel" type="com.zarkorunjevac.codepathtodo.viewmodel.TodoViewModel"/>
  </data>
  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:id="@+id/fragment_todo"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <EditText
      android:id="@+id/txtTodoName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:hint="@string/todo_name_label"
      android:text="@{todoViewModel.todo.getName()}"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
    <EditText
      android:id="@+id/txtTodoNotes"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:hint="@string/todo_notes_label"
      android:inputType="textMultiLine"
      android:lines="5"
      android:text="@{todoViewModel.todo.getTaskNotes()}"
      android:textAlignment="viewStart"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtTodoName" />
    <DatePicker
      android:id="@+id/dpDueDate"

      android:layout_width="wrap_content"
      android:layout_height="212dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:paddingLeft="0dp"
      android:calendarViewShown="false"
      android:datePickerMode="spinner"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginBottom="16dp"
      app:layout_constraintBottom_toTopOf="@+id/priority" />
    <TextView
      android:id="@+id/priority"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp"
      android:text="@string/todo_priority_level_label"
      app:layout_constraintBottom_toBottomOf="@+id/spnPriority"
      app:layout_constraintLeft_toLeftOf="parent" />
    <android.support.v7.widget.AppCompatSpinner
      android:id="@+id/spnPriority"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:entries="@array/todo_priority_array"
      android:gravity="right|end"
      android:selectedItemPosition="@{todoViewModel.todo.getPriorityLevel()}"
      android:textAlignment="textEnd"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toRightOf="@+id/priority"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/dpDueDate" />
    <TextView
      android:id="@+id/status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="-17dp"
      android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp"
      android:text="@string/todo_status_label"
      app:layout_constraintBottom_toBottomOf="@+id/spnStatus"
      app:layout_constraintLeft_toLeftOf="parent" />
    <android.support.v7.widget.AppCompatSpinner
      android:id="@+id/spnStatus"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:entries="@array/todo_status_array"
      android:gravity="right|end"
      android:selectedItemPosition="@{todoViewModel.todo.getStatus()}"
      android:textAlignment="textEnd"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toRightOf="@+id/status"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/spnPriority" />
    <Button
      android:id="@+id/btnSave"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      android:layout_marginRight="16dp"
      android:text="@string/todo_button_save"

      app:layout_constraintBottom_toBottomOf="@id/fragment_todo"
      app:layout_constraintRight_toRightOf="@id/fragment_todo"
      app:layout_constraintTop_toBottomOf="@+id/spnStatus"
      app:layout_constraintVertical_bias="0.0" />
    <TextView
      android:id="@+id/dueDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:text="@string/todo_due_date_label"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginBottom="16dp"
      app:layout_constraintBottom_toTopOf="@+id/dpDueDate"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/txtTodoNotes"
      app:layout_constraintVertical_bias="0.0" />

  </android.support.constraint.ConstraintLayout>
</layout>
